{
  "variables": {
    "version": "2.0-beta-direct",
    "architecture": "amd64"
  },
  "builders": [
    {
      "type": "file",
      "content": "kakaw",
      "target": "dummy.box"
    }
  ],
  "post-processors": [
    [
      {
        "type": "artifice",
        "files": [
          "test/box.ovf",
          "test/metadata.json"
        ]
      },
      {
        "type": "vagrant",
        "keep_input_artifact": true,
        "provider_override": "virtualbox"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "test/test",
        "access_token": "token",
        "vagrant_cloud_url": "http://127.0.0.1:8080/api/v2",
        "version": "{{user `version`}}",
        "insecure_skip_tls_verify": true
      }
    ]
  ]
}